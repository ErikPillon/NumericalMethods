N = 1;
% bottom electrod
x = 0;
y = 0;
while y <=
    while x <= 0.04
        
     
        M(N,:) = [x,y];
    
for j=1:(nb-1)
    for i=1:mb
        N=N+1;
        Px(N)=dr*(i-1);
        Py(N)=dz*(j-1);
    end
end                         
 % material
for j=1:n1
    for i=1:m
